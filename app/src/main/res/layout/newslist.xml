<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/title_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_news"
            android:layout_toRightOf="@+id/img_news"
            android:textSize="8pt"
            android:textStyle="bold"
            android:textColor="@color/royal_blue"
            android:text="Judul Berita"/>

        <ImageView
            android:id="@+id/ic_author"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/title_news"
            android:layout_alignRight="@+id/img_news"
            android:layout_marginTop="8dp"
            android:layout_marginRight="-30dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_news"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/ic_author"
            android:text="Author"
            android:textColor="@color/royal_blue"
            android:textSize="6pt" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@id/title_news"
            android:layout_alignLeft="@+id/publish_date"
            android:layout_marginLeft="-17dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_date" />

        <TextView
            android:id="@+id/publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_news"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:textSize="6pt"
            android:textColor="@color/royal_blue"
            android:text="18-12-2000"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>